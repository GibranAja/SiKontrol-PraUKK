# Database Configuration
DATABASE_URL="mysql://root:password@localhost:3306/peminjaman_alat"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"

# Server Configuration
BASE_URL="http://localhost:3000"
NODE_ENV="development"

# Upload Configuration
UPLOAD_DIR="public/uploads"
MAX_FILE_SIZE="2097152" # 2MB in bytes

# Rate Limiting
RATE_LIMIT_AUTH_MAX="5"
RATE_LIMIT_AUTH_WINDOW="900000" # 15 minutes in ms
RATE_LIMIT_API_MAX="100"
RATE_LIMIT_API_WINDOW="60000" # 1 minute in ms

# Denda Configuration (in Rupiah)
DENDA_PER_HARI="5000"
DENDA_RUSAK_RINGAN="20000"
DENDA_RUSAK_BERAT="50000"

# Business Rules
MAX_PEMINJAMAN_SIMULTAN="2"
MAX_PERPANJANGAN_HARI="7"
HARI_SEBELUM_JATUH_TEMPO_PERPANJANGAN="3"
HARI_BLACKLIST_OTOMATIS="14"
DEFAULT_DURASI_PINJAM_HARI="7"
